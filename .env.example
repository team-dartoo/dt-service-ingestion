# ===========================================
# DART Open API 설정
# ===========================================
DART_API_KEY=your_dart_api_key_here

# ===========================================
# 폴링 설정
# ===========================================
# Ingestion 서비스가 DART Open API를 호출하는 간격 (초)
POLL_INTERVAL=300

# 특정 날짜만 폴링 (선택사항, YYYYMMDD 형식)
TARGET_DATE=20241125

# ===========================================
# MinIO 스토리지 설정
# ===========================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=dart-disclosures
MINIO_SECURE=false

# ===========================================
# Celery/RabbitMQ 설정
# ===========================================
CELERY_BROKER_URL=amqp://admin:password@rabbitmq:5672/

# ===========================================
# Disclosure Service 연동 설정 (Consumer용)
# ===========================================
# Disclosure Service API 베이스 URL
DISCLOSURE_SERVICE_URL=http://disclosure-api:8000

# Worker API Key (Disclosure Service 인증용)
# Disclosure Service의 WORKER_API_KEY와 동일한 값 사용
WORKER_API_KEY=your-worker-api-key-change-this-in-production

# API 요청 타임아웃 (초)
REQUEST_TIMEOUT=30

# API 요청 최대 재시도 횟수
MAX_RETRIES=3

# ===========================================
# 오류 처리 설정
# ===========================================
# 공시별 최대 재시도 횟수
MAX_FAIL=3

# 실패 로그 저장 디렉토리
FAILED_LOG_DIR=logs/failed_logs

# ===========================================
# 로깅 설정
# ===========================================
LOG_LEVEL=INFO